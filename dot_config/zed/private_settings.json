// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "project_panel": {
    "hide_hidden": true
  },
  "vim_mode": false,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "language_models": {
    "openai_compatible": {
      "Groq": {
        "api_url": "https://api.groq.com/openai/v1",
        "available_models": [
          {
            "name": "moonshotai/kimi-k2-instruct-0905",
            "display_name": null,
            "max_tokens": 262144,
            "max_output_tokens": 10000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    },
    "copilot_chat": {
      "api_url": "https://api.githubcopilot.com/chat/completions",
      "auth_url": "https://api.github.com/copilot_internal/v2/token",
      "models_url": "https://api.githubcopilot.com/models"
    }
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "debugger": {
    "dock": "left"
  },
  "terminal": {
    "line_height": "standard"
  },
  "show_edit_predictions": false,
  "languages": {
    "Astro": {
      "show_edit_predictions": true
    },
    "Rust": {
      "show_edit_predictions": false
    },
    "Python": {
      "language_servers": ["basedpyright", "ruff"]
    },
    "C++": {
      "format_on_save": "on"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Vesper Black"
  },
  "soft_wrap": "editor_width"
}
